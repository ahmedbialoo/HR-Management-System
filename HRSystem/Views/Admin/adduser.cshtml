@model User;
@{
    ViewData["Title"] = "adduser";
     
}




      <div class="main-panel">
        <div class="main-content">
          <div class="content-wrapper">
            <div class="container-fluid"><!-- Zero configuration table -->
                <section id="configuration">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-header">
                                    <div class="card-title-wrap bar-success">
                                        <h4 class="card-title">Add user </h4>
                                  
                                </div>
                                <div class="card-body">
                                    <div class="px-3">
                                        <form asp-action="adduser" asp-controller="Admin" class="form form-horizontal" method="post">
                                            <div class="form-body">
                                                @*-------------User Fname------------*@
                                                <div class="form-group row">
                                                    <label class="col-md-3 label-control" for="projectinput1">First Name: </label>
                                                    <div class="col-md-9">
                                                        <input asp-for="User_Fname" type="text" id="projectinput1" class="form-control" value=@TempData["userfname"]>
                                                        <span asp-validation-for="User_Fname" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                @*-------------User name ------------*@
                                                <div class="form-group row">
                                                    <label class="col-md-3 label-control" for="projectinput1">User Name : </label>
                                                    <div class="col-md-9">
                                                        <input asp-for="Username" type="text" id="username"   class="form-control"  value=@TempData["username"]>
										                <span asp-validation-for="Username" class="text-danger"></span>
                                                        @if (TempData["UserError"] != null)
                                                        {
                                                            <span class="text-danger"> This User Name already exists</span>
                                                        }
                                                    </div>
                                                </div>
                                                @*-------------Password ------------*@
                                                <div class="form-group row">
                                                    <label class="col-md-3 label-control" for="projectinput1">Password: </label>
                                                    <div class="col-md-9">
                                                        <input asp-for="Password" type="password" id="projectinput1" class="form-control">
                                                        <span asp-validation-for="Password" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                @*-------------Email ------------*@
                                                <div class="form-group row">
                                                    <label class="col-md-3 label-control" for="projectinput1">Email : </label>
                                                    <div class="col-md-9">
                                                        <input asp-for="User_Email" type="text" id="projectinput1" class="form-control" value=@TempData["useremail"]>
                                                        <span asp-validation-for="User_Email" class="text-danger"></span>
                                                    
                                                     @if (TempData["EmailError"] != null)
                                                        {
                                                            <span class="text-danger"> This Email already exists</span>
                                                        }
                                                        </div>
                                                </div>
                                                @*-------------Group ------------*@
                                                <div class="form-group row">
                                                    <label class="col-md-3 label-control" for="projectinput7">Group Name : </label>
                                                    <div class="col-md-9">
                                                        <select asp-for="GroupId" asp-items="ViewBag.group" type="text" id="projectinput1" class="form-control"></select>
										                <span asp-validation-for="GroupId" class="text-danger"></span>
                                                    </div>
                                                </div>
  
                                            </div>

                                            <div class="form-actions">
                                                <button type="button" class="btn btn-danger mr-1" onclick="form.reset(this)">
                                                    <i class="icon-trash"></i> Cancel
                                                </button>
                                                <button type="submit" class="btn btn-success" >
                                                    <i class="icon-note"></i> Save
                                                </button>
                                            </div>

                                        </form>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </section>

            </div>
        </div>
    </div>

        <footer class="footer footer-static footer-light">
          <p class="clearfix text-muted text-center px-2"><span>Copyright  &copy; 2021 <a href="#" id="pixinventLink" target="_blank" class="text-bold-800 primary darken-2">Pioneer solutions </a>, All rights reserved. </span></p>
        </footer>

      </div>
   


  