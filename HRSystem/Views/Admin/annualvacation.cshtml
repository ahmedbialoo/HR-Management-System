@model AnnualVacation;
@{
    ViewData["Title"] = "annualvacation";
    List<AnnualVacation> annualvac = ViewBag.annual;
	<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}



 

      <div class="main-panel">
        <div class="main-content">
          <div class="content-wrapper">
            <div class="container-fluid">
<section id="horizontal-form-layouts">

	<div class="row">
		<div class="col-md-12">
			<div class="card">
				<div class="card-header">
					<div class="card-title-wrap bar-success">
						<h4 class="card-title" id="horz-layout-basic">Annual Vacation Form </h4>
					</div>
				</div>
				<div class="card-body">
					<div class="px-3">
						
						<form method="post">
							<div class="form-body">
								<h4 class="form-section">
									<i class="icon-user"></i>annual vacation dates</h4>
								
									<div>
										<label  class="col-md-3 label-control">name: </label>
									<div class="col-md-9">
										<input  asp-for="name" type="text" class="form-control" >
									</div>
									<span asp-validation-for="name" class="text-danger"></span>
									</div>
							
								
									<div><label class="col-md-3 label-control">
                                        date </label>
									<div class="col-md-9">
										<input asp-for="date" type="date"  class="form-control" >
									</div>
									<span asp-validation-for="date" class="text-danger"></span>
								</div>
								


							<div class="form-actions">
								<button type="button" class="btn btn-danger mr-1" onclick="form.reset(this)" >
									<i class="icon-trash"></i> cancel
								</button>
								<button type="submit" class="btn btn-success">
									<i class="icon-note"></i> save
								</button>
							</div>
						</form>

						<table class="table table-striped table-bordered zero-configuration">
                            <thead>
                                <tr>
                                   <th style="text-align: center">Vacation Name</th>
                                    <th style="text-align: center">Vacation Date</th>
                                    <th style="text-align: center">Actions</th>
                                 
                               
                                </tr>
                            </thead>
                              <tbody>
								  @if(annualvac != null){
                                            @foreach (var item in annualvac)
                                            {
                                            <tr>
                                             <td class="text-center">@Html.DisplayFor(modelItem=>item.name)</td>
                                             <td class="text-center">@Html.DisplayFor(modelItem=>item.date)</td>
                                           
                                             <td class="text-center">
                                                 <button class="btn btn-danger mb-2"> 
                                                    <a asp-action="deleteannualvacation" asp-route-id="@item.id" >delete</a>
                                                 </button>
                                             </td>
                                          </tr>
                                           }}
                            </tbody>
                        </table>
                   


					</div>
				</div>
			</div>
		</div>
	</div>


</section>
<!-- // Basic form layout section end -->
            </div>
          </div>
        </div>

        <footer class="footer footer-static footer-light">
          <p class="clearfix text-muted text-center px-2"><span>Copyright  © 2021 <a href="#" id="pixinventLink" target="_blank" class="text-bold-800 primary darken-2">Pioneer solutions </a>, All rights reserved. </span></p>
        </footer>

      </div>


	  @section Scripts {
   @{await Html.RenderPartialAsync("/Views/Shared/_ValidationScriptsPartial.cshtml");}
}
  
