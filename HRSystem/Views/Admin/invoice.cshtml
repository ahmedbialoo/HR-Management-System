
@{
    ViewData["Title"] = "invoice";
}

      <div class="main-panel">
        <div class="main-content">
          <div class="content-wrapper">
            <div class="container-fluid">
                <section class="invoice-template">
                    <div class="card">
                        <div class="card-body p-3">
                            <div id="invoice-template" class="card-block">
                                <!-- Invoice Company Details -->
                                <div id="invoice-company-details" class="row">
                                    <div class="col-6 text-left">
                                        <img src="~/img/logo.png" alt="company logo" class="mb-2" width="70">
                                        <ul class="px-0 list-unstyled">
                                            <li class="text-bold-800">Pioneer Solutions Company </li>
                                            <li>Cairo,</li>
                                            <li>Naser City ,</li>
                                            <li>102 Makrim Ebid,</li>
                                           
                                        </ul>
                                    </div>
                                    <div class="col-6 text-right">
                                        <h2>INVOICE</h2>
                                        <p class="pb-3"># INV-001001</p>
                                    </div>
                                </div>
                     
                               
                                <!-- Invoice Items Details -->
                                <div id="invoice-items-details" class="pt-2">
                                    <div class="row">
                                      <table class="table table-striped table-bordered zero-configuration mt-40">
                                        <thead>
                                            <tr>
                                                <th>Employee Name</th>
                                                <th>Salary</th>
                                                <th>Attendance days</th>
                                                <th>Absent days</th>
                                                <th>Overtime hours</th>
                                                <th>Discount hours</th>
                                                <th>Extra</th>
                                                <th>discount</th>
                                                <th>Total</th>
                                     
                                            </tr>
                                        </thead>
                                        <tbody>
                                            

                                            <tr>
                                                <td>@ViewBag.name</td>
                                                <td>@ViewBag.salary</td>
                                                <td>@ViewBag.attendance</td>
                                                <td>@ViewBag.absent</td>
                                                <td>@ViewBag.extra_hrs</td>
                                                <td>@ViewBag.discount_hrs</td>
                                                <td>@ViewBag.overtime</td>
                                                <td>@ViewBag.discount</td>
                                                <td id='total'>@ViewBag.total</td>
                                            </tr>
                                            
                                                                                                                                                                                                                                                                                 
                                        </tbody>
                            
                                    </table>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6 col-sm-12 text-left">
                                            <p class="lead">Payment Methods:</p>
                                            <div class="row">
                                                <div class="col-12">
                                                    <table class="table table-borderless table-sm">
                                                        <tbody>
                                                            <tr>
                                                                <td>Bank name:</td>
                                                                <td class="text-right">ABC Bank, USA</td>
                                                            </tr>
                                                            <tr>
                                                                <td>Acc name:</td>
                                                                <td class="text-right">Amanda Orton</td>
                                                            </tr>
                                                            <tr>
                                                                <td>IBAN:</td>
                                                                <td class="text-right">FGS165461646546AA</td>
                                                            </tr>
                                                            <tr>
                                                                <td>SWIFT code:</td>
                                                                <td class="text-right">BTNPP34</td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-12">
                                            <p class="lead">Total due</p>
                                            <div class="table-responsive">
                                                <table class="table">
                                                    <tbody>
                                                        <tr>
                                                            <td>Sub Total</td>
                                                            <td class="text-right">@ViewBag.total</td>
                                                        </tr>
                                                        <tr>
                                                            <td>Tax &nbsp&nbsp<input id="tax" class="form-control d-inline" style="width:70px" type="number" min="0" max="100" value=14 /> %</td>
                                                            <td id = 'tax-amount' class="text-right"></td>
                                                        </tr>
                                                        <tr>
                                                            <td class="text-bold-800">Total</td>
                                                            <td id="after_tax" class="text-bold-800 text-right"></td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                            <div class="text-center">
                                                <p>Authorized person</p>
                                                <img src="~/img/pages/signature-scan.png" alt="signature" class="width-250">
                                                <h6>Amanda Orton</h6>
                                                <p class="text-muted">Managing Director</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- Invoice Footer -->
                                <div id="invoice-footer">
                                    <div class="row">
                                        <div class="col-md-9 col-sm-12">
                                            <h6>Terms &amp; Condition</h6>
                                            <p>You know, being a test pilot isn't always the healthiest business in the world. We predict too
                                                much for the next year and yet far too little for the next 10.</p>
                                        </div>
                                        <div class="col-md-3 col-sm-12 text-center">
                                            <button onclick="printDiv('invoice-items-details')" type="button" class="btn btn-primary my-1">Print</button>
                                        </div>
                                    </div>
                                </div>
                                <!--/ Invoice Footer -->
                            </div>
                        </div>
                    </div>
                </section>
                <!--Invoice template ends-->
                            </div>
          </div>
        </div>

        <footer class="footer footer-static footer-light">
          <p class="clearfix text-muted text-center px-2"><span>Copyright  &copy; 2021 <a href="#" id="pixinventLink" target="_blank" class="text-bold-800 primary darken-2">Pioneer solutions </a>, All rights reserved. </span></p>
        </footer>

      </div>
@section scripts{
    <script>
        function printDiv(divName) {
     var printContents = document.getElementById(divName).innerHTML;
     var originalContents = document.body.innerHTML;

     document.body.innerHTML = printContents;

     window.print();

     document.body.innerHTML = originalContents;
}

jQuery(function($) {
  $('#tax-amount').text(parseInt(document.getElementById('total').innerHTML)*parseInt(document.getElementById('tax').value)/100);
  $('#after_tax').text(parseInt(document.getElementById('total').innerHTML)-parseInt(document.getElementById('tax-amount').innerHTML));

  $('#tax').on('input', function() {
        var tax = parseInt(document.getElementById('tax').value);
        var total = parseInt(document.getElementById('total').innerHTML);
        var tax_amount = (total*tax)/100;
    $('#tax-amount').text(tax_amount);
    $('#after_tax').text(total-tax_amount);
  });
});


    </script>
}